{
	"name": "openllm",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"clean": "find . -path \"./node_modules\" -prune -o \\( -type d -name \"dist\" -o -name \".turbo\" \\) -exec rm -rf {} +",
		"clean:node_modules": "find . -type d -name \"node_modules\" -exec rm -rf {} +",
		"dev": "turbo run dev",
		"format": "eslint --fix . && prettier --write .",
		"postinstall": "husky && sync-editorconfig || true",
		"lint": "eslint . && prettier --check .",
		"push-dev": "pnpm --filter db push",
		"push-test": "DATABASE_URL=postgres://postgres:pw@localhost:5389/test pnpm --filter db push",
		"redo": "docker compose down -v && docker compose up -d && sleep 5 && pnpm push && pnpm seed && pnpm test-prepare",
		"reset": "pnpm --filter db reset",
		"seed": "pnpm --filter db seed",
		"sync": "pnpm push-dev; pnpm push-test",
		"test": "DATABASE_URL=postgres://postgres:pw@localhost:5389/test vitest run --no-file-parallelism"
	},
	"commitlint": {
		"extends": "@steebchen/commitlint-config"
	},
	"prettier": "@steebchen/prettier-config",
	"devDependencies": {
		"@steebchen/commitlint-config": "^1.5.2",
		"@steebchen/eslint-config": "^1.5.2",
		"@steebchen/lint-next": "^1.19.4",
		"@steebchen/prettier-config": "^1.4.2",
		"concurrently": "^9.1.2",
		"eslint": "^9.24.0",
		"husky": "^9.1.7",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"turbo": "^1.10.0",
		"vite": "^6.3.4",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.1"
	},
	"disabledLinters": [
		"eslint-plugin-tailwindcss"
	]
}
